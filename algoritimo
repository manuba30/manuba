exercicio 12
 
function cont(mot,letr)
{
  let a = 0 ;
  for(let i =0;mot[i]!==undefined;i++)
    {
      if(mot[i]===letr)
        {
          a++;
        }
    }
  return a;
}
cont("banana","a")
