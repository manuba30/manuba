exercicio 9

function esp(word)
{
  let i = 0;
  let b = "";
  while(word[i]!==undefined)
    {
      b=word[i]+b;
      i++;
      if(b===word)
        console.log("é uma palavra palindromica")
    }
  return b;
}
esp("kayak")

