lista exercicio 4

function calc (a,b,oper)
{
  switch(oper)
  {
  case 1:
      console.log("resultado",a+b,)
      break;
   case 2:
      console.log("resultado",a-b,)
      break;  
   case 3:
      console.log("resultado",a*b,)
      break;   
    case 4:
     if(b===0)
       {
         console.log("impossivel")
       }
      else
        {
          console.log("resultado",a/b,)
        }
      break;
      
    default:
      console.log("invalido")
  }
}
calc(10,5,3)
