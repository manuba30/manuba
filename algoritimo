function retVoi(mot)
{
  let i = 0;
  let b = "";
  let c = 0;
  
  while(mot[i]!=undefined)
    {
      if(mot[i]!="a" && mot[i]!="e" && mot[i]!="i" && mot[i]!="o" && mot[i]!="u" && mot[i]!="y")
        {
          c++;
          
        }
      i++;

    }
  console.log(c)
  //return c;
}

console.log(retVoi("abacaxi"))

