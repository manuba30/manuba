exercicio 16

function ind(tab)
{
  let max = tab[0];
  let val = 0;
  let long = taille(tab);
  for(let i =0;i<long;i++);
      {
    if(tab[i]<max)
    {
      max =tab[i];
      val = i;
    }
  }
return val;
}
