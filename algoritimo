exercicio 15

function ind(tab)
{
  let min = tab[0];
  let val = 0;
  let long = taille(tab);
  for(let i =0;i<long;i++);
      {
    if(tablo[i]<min)
    {
      min =tab[i];
      val = i;
    }
  }
return val;
}

