function nom(a)
{
  let num = a;
  if(num>0)
    {
          console.log("este",num, "é positivo")
    }
  else if(num<0)
    {
  console.log("este",num,"é negativo" )
    }
 
else if(a===0)
  {
    console.log(num,"é zero")
  }
  else
    {
      console.log("este", num ,"é null ou indefinido")
    }
}
 nom(10)
