exercicio 18


function somaDiagonais(tab) { 
    
    let i = 0; 
    let som = 0; 
    let c = 0; 
    let d = 0; 
 

    let j = 0;
    while(tab[0][j] != undefined){
        j++;                                     //tamanho das colunas 5
    }

    
    while(tab[i]!=undefined) 
      { 
        j--;
        if(i != j){
            
            c = c + tab[i][i];          
            d = d + tab[i][j];         
        }
         else
        {
            c = c + tab[i][i];          
        }
        i++;
      } 
    console.log(d);           
    console.log(c);            

    som = d + c;                // som = 6 + 0
    
    return som ; 
} 
somaDiagonais( 
    [[1,2,8,9,6], 

     [7,8,1,4,5], 

     [6,3,0,2,4], 

     [7,5,4,2,0], 

     [3,1,9,0,8]] )
